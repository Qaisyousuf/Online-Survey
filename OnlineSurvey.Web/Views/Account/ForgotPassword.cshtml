                                <div class="form-group">
                                    <div class="">
                                        <input type="submit" class="btn btn-rounded btn-outline-white text-white btn-md" value="Email Link" />
                                    </div>
                                </div>

                                <!-- Register -->
                                <!-- Social login -->


                            </form>
                            <!-- Form -->

                        </div>

                    </div>


                }


            </div>
            <div class="col-md-5 offset-md-1 offset-lg-1  mt-5">
                <div class="img-fluid">
                    <img src="~/Content/Images/Forgot-password-amico.svg" id="ImageFit" />
                </div>
            </div>
        </div>
    </div>
</div>






