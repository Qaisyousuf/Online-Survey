                    @Html.AntiForgeryToken()

                    @Html.ValidationSummary("", new { @class = "text-danger" })



                    <div class="view card bg-transparent z-depth-1 mt-md-5 mt-lg-5 ">

                        <h5 class="card-header white-text text-center py-4" id="cardColor">
                            <strong>Forgot password</strong>
                        </h5>

                        <!--Card content-->
                        <div class="card-body px-lg-5 pt-3 h-100">

                            <!-- Form -->
                            <form class="text-center" style="color: #757575;" action="#!">

                                <div class="form-group" id="FormText">
                                    <div class="md-form" Id="textboxcolor">
                                        @Html.LabelFor(m => m.Email, new { @class = "control-label" })
                                        @Html.TextBoxFor(m => m.Email, new { @class = "form-control" })
                                        @Html.ValidationMessageFor(m => m.Email, "", new { @class = "text-danger" })
                                    </div>

                                </div>
                                <!-- Email -->
                                <!-- Password -->
