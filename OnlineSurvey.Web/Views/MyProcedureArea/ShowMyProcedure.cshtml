@model IEnumerable<OnlineSurvey.ViewModel.UserProcedureViewModel>

@{
    ViewBag.Title = "ShowMyProcedure";
    Layout = "~/Views/Shared/_UserDashboard.cshtml";
}

<div class="container my-5">
    <div class="row">
        <div class="col-md-10 offset-md-2">
           
            <div class="row d-flex justify-content-start mt-4">
                @foreach (var item in Model)
                {
                    if (item.UserName == User.Identity.Name)
                    {
                <div class="col-lg-3 col-md-6 mb-5">

                    @if (item.MyProocedure.ProcedureName == "New")
                    {
                        <h4>@item.Name</h4>
                        <h4 class="font-weight-bold mb-2 chip  text-white  success-color"> <i class="fas fa-tag"></i> @item.MyProocedure.ProcedureName</h4>
                        <p class="text-muted px-2 mb-lg-0">
                            @item.MyProocedure.Content
                        </p>
                    }
                    else if (item.MyProocedure.ProcedureName == "Assigned")
                    {
                        <h4>@item.Name</h4>
                        <h4 class="font-weight-bold text-white mb-2 chip light-blue lighten-1">  <i class="fas fa-tag"></i> @item.MyProocedure.ProcedureName</h4>
                        <p class="text-muted px-2 mb-lg-0">
                            @item.MyProocedure.ProcedureName
                        </p>
                    }
                    else if (item.MyProocedure.ProcedureName == "In progress")
                    {
                        <h4>@item.Name</h4>
                        <h4 class="font-weight-bold text-white mb-2 chip indigo">  <i class="fas fa-tag"></i> @item.MyProocedure.ProcedureName</h4>
                        <p class="text-muted px-2 mb-lg-0">
                            @item.MyProocedure.Content
                        </p>
                    }
                    else if (item.MyProocedure.ProcedureName == "Request")
                    {
                        <h4>@item.Name</h4>
                        <h4 class="font-weight-bold text-white mb-2 chip teal darken-1">  <i class="fas fa-tag"></i> @item.MyProocedure.ProcedureName</h4>
                        <p class="text-muted px-2 mb-lg-0">
                            @item.
                        </p>
                    }
                    else if (item.MyProocedure.ProcedureName == "Approved")
                    {
                        <h4>@item.Name</h4>
                        <h4 class="font-weight-bold text-white mb-2 chip  blue darken-4">  <i class="fas fa-tag"></i> @item.MyProocedure.ProcedureName</h4>
                        <p class="text-muted px-2 mb-lg-0">
                            @item.MyProocedure.Content
                        </p>
                    }
                    else if (item.MyProocedure.ProcedureName == "Declined")
                    {
                        <h4>@item.Name</h4>
                        <h4 class="font-weight-bold text-white mb-2 chip   red darken-4">  <i class="fas fa-tag"></i> @item.MyProocedure.ProcedureName</h4>
                        <p class="text-muted px-2 mb-lg-0">
                            @item.MyProocedure.Content
                        </p>
                    }
                    else if (item.MyProocedure.ProcedureName == "Complete")
                    {
                        <h4>@item.Name</h4>
                        <h4 class="font-weight-bold text-white mb-2 chip  default-color">  <i class="fas fa-tag"></i> @item.MyProocedure.ProcedureName</h4>
                        <p class="text-muted px-2 mb-lg-0">
                            @item.MyProocedure.Content
                        </p>
                    }
                    else
                    {
                        <h4>@item.Name</h4>
                        <h4 class="font-weight-bold text-white mb-2 chip warning-color-dark">  <i class="fas fa-tag"></i> @item.MyProocedure.ProcedureName</h4>
                        <p class="text-muted px-2 mb-lg-0">
                            @item.MyProocedure.Content
                        </p>
                    }

                </div>
                            }

                }

            </div>

            

        </div>
    </div>
</div>
