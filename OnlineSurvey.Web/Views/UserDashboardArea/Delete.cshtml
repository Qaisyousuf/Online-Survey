@model OnlineSurvey.ViewModel.UserCommentViewModel

@{
    ViewBag.Title = "Delete";
    Layout = "~/Views/Shared/_UserDashboard.cshtml";
}

<div class="container mt-5">
    <div class="row">
        <div class="col-md-10 offset-md-2 mt-3">
            <div class="card-body card-body-cascade d-flex justify-content-center mt-n2">
                @using (Html.BeginForm())
                {
                    @Html.HiddenFor(model => model.Id)

                    <!-- Table with panel -->
                    <div class="card card-cascade narrower">

                        <!--Card image-->
                        <div class="view view-cascade gradient-card-header mdb-color darken-3 narrower py-2 mx-4 mb-3 d-flex justify-content-between align-items-center">

                            <h6 class="mt-3 mb-1"><i class="fas fa-info"></i> Are you sure you want to delete <button class="btn btn-rounded btn-danger btn-sm">@Model.Title</button></h6>
                        </div>
                        <!--/Card image-->

                        <div class="px-4">

                            <div class="table-wrapper my-3">
                                <!--Table-->
                                <table class="table table-hover mb-0 table-bordered">

                                    <!--Table head-->
                                    <!--Table head-->
                                    <!--Table body-->
                                    <tbody>
                                        <tr>
                                            <th scope="row">
                                                <a class="btn-floating btn-sm btn-info"><i class="fas fa-tag"></i></a>
                                            </th>
                                            <td class="font-weight-bold"> @Html.DisplayNameFor(model => model.Title)</td>
                                            <td class="text-primary"> @Html.DisplayFor(model => model.Title)</td>
                                        </tr>
                                        <tr>
                                            <th scope="row">
                                                <a class="btn-floating btn-sm btn-info"><i class="fas fa-tag"></i></a>
                                            </th>
                                            <td class="font-weight-bold"> @Html.DisplayNameFor(model => model.UserName)</td>
                                            <td class="text-primary"> @Html.DisplayFor(model => model.UserName)</td>
                                        </tr>
                                        <tr>
                                            <th scope="row">
                                                <a class="btn-floating btn-sm btn-info"><i class="fas fa-tag"></i></a>
                                            </th>
                                            <td class="font-weight-bold"> @Html.DisplayNameFor(model => model.Name)</td>
                                            <td class="text-primary"> @Html.DisplayFor(model => model.Name)</td>
                                        </tr>
                                        <tr>
                                            <th scope="row">
                                                <a class="btn-floating btn-sm btn-info"><i class="fas fa-tag"></i></a>
                                            </th>
                                            <td class="font-weight-bold"> @Html.DisplayNameFor(model => model.PostedDate)</td>
                                            <td class="text-primary"> @Html.DisplayFor(model => model.PostedDate)</td>
                                        </tr>
                                        <tr>
                                            <th scope="row">
                                                <a class="btn-floating btn-sm btn-info"><i class="fas fa-tag"></i></a>
                                            </th>
                                            <td class="font-weight-bold"> @Html.DisplayNameFor(model => model.AnimationUrl)</td>
                                            <td class="text-primary"> @Html.DisplayFor(model => model.AnimationUrl)</td>
                                        </tr>
                                        <tr class="">
                                            <th scope="row">
                                                <a class="btn-floating btn-sm btn-info"><i class="fas fa-tag"></i></a>
                                            </th>
                                            <td class="font-weight-bold">  @Html.DisplayNameFor(model => model.Comment)</td>
                                            <td class="collapse" id="collapseExample"> @Html.Raw(Model.Comment)</td>
                                            <td>
                                                <button class="btn btn-info btn-sm" type="button" data-toggle="collapse" data-target="#collapseExample"
                                                        aria-expanded="false" aria-controls="collapseExample">
                                                    view content
                                                </button>
                                            </td>


                                        </tr>
                                    </tbody>
                                    <!--Table body-->
                                </table>
                                <!--Table-->
                            </div>

                        </div>

                    </div>
                    <!-- Table with panel -->
                    <div class="row my-5 justify-content-center">
                        <div class="">
                            <div class="form-group">
                                <button type="submit" value="Create" class="btn btn-danger btn-rounded btn-md"><i class="fas fa-trash pr-2"></i> Confirm Delete</button>

                            </div>
                        </div>
                    </div>
                }


            </div>
        </div>
    </div>
</div>






