@model OnlineSurvey.ViewModel.UserCommentViewModel

@{
    ViewBag.Title = "Edit";
    Layout = "~/Views/Shared/_UserDashboard.cshtml";
}



<div class="container my-5">
    <div class="row pt-3">
        <div class="col-md-10 offset-md-2">
            @using(Html.BeginForm())
            {

                {
                    @Html.AntiForgeryToken()

                    <div class="card card-cascade narrower">

                        <!-- Card image -->
                        <div class="view view-cascade gradient-card-header blue-gradient">

                            <!-- Title -->
                            <h4 class="card-header-title">Update your comment</h4>
                            <!-- Subtitle -->
                            <!-- Facebook -->


                        </div>

                        <!-- Card content -->
                        <div class="card-body card-body-cascade ">

                            <!-- Text -->
                            <div class="form-horizontal">

                                <hr />
                                @Html.ValidationSummary(true, "", new { @class = "text-danger" })
                                <div class="form-group">
                                    @Html.LabelFor(model => model.Title, htmlAttributes: new { @class = "control-label " })
                                    @Html.EditorFor(model => model.Title, new { htmlAttributes = new { @class = "form-control" } })
                                    @Html.ValidationMessageFor(model => model.Title, "", new { @class = "text-danger" })
                                </div>
                                <div class="form-group">
                                    @Html.LabelFor(model => model.Comment, htmlAttributes: new { @class = "control-label " })
                                    @Html.TextAreaFor(model => model.Comment, new { htmlAttributes = new { @class = "form-control" } })
                                    @Html.ValidationMessageFor(model => model.Comment, "", new { @class = "text-danger" })
                                </div>


                                <div class="form-group">

                                    <input type="submit" value="Submit" class="btn btn-rounded btn-outline-cyan " />
                                    <a class="btn btn-rounded" href="/UserDashboardArea/DisplayUserCommentData">Back to menu</a>
                                  
                                </div>
                            </div>

                        </div>

                    </div>


                }
            }

        </div>
    </div>
</div>





@section scripts {

    <script>
        $(document).ready(function () {

            // SideNav Initialization
            $(".button-collapse").sideNav();
            slim: true
            new WOW().init();
        })
    </script>


    <script src="~/Scripts/ckeditor/ckeditor.js"></script>
    <script>
        CKEDITOR.replace("Comment");
    </script>

    @Scripts.Render("~/bundles/jqueryval")
}