@model  OnlineSurvey.ViewModel.ListofBackendViewModel

@{
    ViewBag.Title = "ShowAdminDashboard";
    Layout = "~/Areas/OnlineSurveyAdmin/Views/Shared/_Dashboard.cshtml";
}


<div class="Mainbackground" style="margin-top:-100px;">
    <div class="MainBannerBackgrondImage">
        <div class="view bg-transparent">
            <!-- Mask & flexbox options-->
            <div class="mask">
                <!-- Content -->
                <div class="container h-100">
                    <!--Grid row-->
                    <div class="row align-items-center min-vh-100">
                        <!--Grid column-->
                        @foreach (var item in Model.ListofAdminDashboard)
                        {
                            <div class="col-md-6">
                                <h1 class="mb-2 text-white font-weight-bold">@item.Title</h1>

                                <p class="mb-2 pb-2 text-white">@item.Content</p>
                                <p class="chip">Designed by: @item.DesignedByCompany</p>

                            </div>
                            <!--Grid column-->
                            <!--Grid column-->
                            <div class="col-md-6">
                                <div class=" img-fluid">

                                    <lottie-player src="@item.Animaiton" background="transparent" speed="1" style="width: auto; height: auto;" loop autoplay></lottie-player>
                                </div>
                            </div>
                        }

                        <!--Grid column-->
                    </div>
                    <!--Grid row-->
                </div>
                <!-- Content -->


            </div>
            <!-- Mask & flexbox options-->
        </div>
    </div>
</div>
<div class="container my-5">
    <div class="row">

        <div class="col-md-3 mt-3">
            <div class="media white z-depth-1 rounded">

                <i class="fab fa-wpforms fa-lg blue z-depth-1 p-4 rounded-left text-white mr-3"></i>
                <div class="media-body p-1">
                    <p class="text-uppercase text-muted mb-1"><small>Total surveys</small></p>
                    <h5 class="font-weight-bold mb-0">@Model.ListofSurvey.Count()</h5>
                </div>
            </div>
        </div>
        <div class="col-md-3 mt-3">
            <div class="media white z-depth-1 rounded">
                <i class="fas fa-user fa-lg deep-purple z-depth-1 p-4 rounded-left text-white mr-3"></i>
                <div class="media-body p-1">
                    <p class="text-uppercase text-muted mb-1"><small>Total users</small></p>
                    <h5 class="font-weight-bold mb-0">@Model.ListofUsers.Count()</h5>
                </div>
            </div>
        </div>
        <div class="col-md-3 mt-3">
            <div class="media white z-depth-1 rounded">
                <i class="fas fa-pager fa-lg teal z-depth-1 p-4 rounded-left text-white mr-3"></i>
                <div class="media-body p-1">
                    <p class="text-uppercase text-muted mb-1"><small>Total pages</small></p>
                    <h5 class="font-weight-bold mb-0">@Model.ListofPageViewModel.Count()</h5>
                </div>
            </div>
        </div>
        <div class="col-md-3 mt-3">
            <div class="media white z-depth-1 rounded">

                <i class="fas fa-redo-alt fa-lg success-color z-depth-1 p-4 rounded-left text-white mr-3"></i>
                <div class="media-body p-1">
                    <p class="text-uppercase text-muted mb-1"><small>Total responses</small></p>
                    <h5 class="font-weight-bold mb-0">@Model.ListofResponse.Count()</h5>
                </div>
            </div>
        </div>

    </div>
</div>

@section scripts{
    <script src="~/Scripts/node_modules/lottie-player/dist/lottie-player.js"></script>
    <script>
        $(document).ready(function () {

            // SideNav Initialization
            $(".button-collapse").sideNav();
            slim: true
            new WOW().init();
        })
    </script>
}