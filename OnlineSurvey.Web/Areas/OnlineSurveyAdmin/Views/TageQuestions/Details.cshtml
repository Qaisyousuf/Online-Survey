@model OnlineSurvey.ViewModel.TagQuestionViewModel
@{
    Layout = null;
}

<div>
    <div class="card-body card-body-cascade d-flex justify-content-center">
        @using (Html.BeginForm("Details", "TageQuestions", FormMethod.Get, new { onsubmit = "return SubmitFormDetails(this)" }))
        {
            @Html.HiddenFor(model => model.Id)

            <!-- Table with panel -->
            <div class="card card-cascade narrower">

                <!--Card image-->
                <div class="view view-cascade gradient-card-header mdb-color darken-3 narrower py-2 mx-4 mb-3 d-flex justify-content-between align-items-center">

                    <h6 class="mt-3 mb-1"><i class="fas fa-info"></i> Details of <span class="chip ml-2 mr-2">@Model.Name</span>record</h6>
                </div>
                <!--/Card image-->

                <div class="px-4">

                    <div class="table-wrapper my-3">
                        <!--Table-->
                        <table class="table table-hover mb-0 table-bordered">

                            <!--Table head-->
                            <!--Table head-->
                            <!--Table body-->
                            <tbody>
                                <tr>
                                    <th scope="row">
                                        <a class="btn-floating btn-sm btn-info"><i class="fas fa-tag"></i></a>
                                    </th>
                                    <td class="font-weight-bold"> @Html.DisplayNameFor(model => model.Name)</td>
                                    <td class="text-primary"> @Html.DisplayFor(model => model.Name)</td>
                                </tr>
                                
                                <tr>
                                    <th scope="row">
                                        <a class="btn-floating btn-sm btn-info"><i class="fas fa-tag"></i></a>
                                    </th>
                                    <td class="font-weight-bold"> @Html.DisplayNameFor(model => model.IsActive)</td>
                                    <td class="text-primary"> @Html.CheckBoxFor(model => model.IsActive, new { htmlAttributes = new { @class = "form-control ui-checkboxradio-checked " }, style = "opacity: 1; padding-top:1px; margin:1px; " })</td>
                                </tr>

                            </tbody>
                            <!--Table body-->
                        </table>
                        <!--Table-->
                    </div>

                </div>

            </div>
            <!-- Table with panel -->

        }


    </div>
</div>