@model IEnumerable<OnlineSurvey.ViewModel.ViewUserViewModel>

@{
    ViewBag.Title = "Users";
}
<div class="card">
    <h5 class="card-header mdb-color darken-3 white-text text-uppercase font-weight-normal text-center py-4">
        list of roles
    </h5>
    <div class="card-body">
        <p>

            <a class="btn btn-rounded  btn-outline-primary" href="/OnlineSurveyAdmin/Users/Create"><i class="fas fa-plus-circle pr-2 fa-1x" aria-hidden="true"></i> add new record</a>
        </p>
        <div class="table-responsive">
            <table id="dataTable" class="table table-hover table-responsive-sm">
                <thead class="">
                    <tr>
                        <th scope="col" class="text-primary"><i class="fas fa-newspaper"></i> UserName </th>
                        <th scope="col" class="text-primary"><i class="fas fa-newspaper"></i> Email </th>
                        <th scope="col" class="text-primary"><i class="fas fa-tools"></i> Action</th>
                    </tr>
                </thead>
                <tbody></tbody>
            </table>
        </div>

        @*<p class="text-small text-muted mb-0 pt-3">* At vero eos et accusamus et iusto ducimus.</p>*@
    </div>
</div>

@section scripts{
    <script src="~/Scripts/jquery-ui-1.12.1.min.js"></script>
    <script>
        $(document).ready(function () {

            // SideNav Initialization
            $(".button-collapse").sideNav();
            new WOW().init();
        })
    </script>
    <script>
        var Popup, dataTable;
        $(document).ready(function () {
            dataTable = $("#dataTable").DataTable({
                "info": false,
                "responsive": true,
                "fixedHeader": true,
                fixedColumns: true,

                "lengthMenu": [[10, 25, 50, -1], [10, 25, 50, "All"]],

                dom: 'Bfrtip',
                buttons: [
                    {
                        extend: 'copyHtml5', footer: true,

                    },
                    { extend: 'excelHtml5', footer: true, download: 'open' },
                    { extend: 'csvHtml5', footer: true, download: 'open' },
                    { extend: 'pdfHtml5', footer: true, download: 'open' },

                ],
                "ajax": {
                    "url": "/OnlineSurveyAdmin/Users/GetUserData",
                    "type": "GET",
                    "datatype": "json",


                },

                "columns": [

                    { "data": "UserName" },
                    { "data": "Email" },

                    {
                        "data": "actions",
                        "className": "dt-body-right",
                        "data": "Id", "render": function (data)

                        {
                            return "<a class='btn btn-info btn-md btn-rounded' onclick=PopupForm('@Url.Action("Edit", "Users")/" + data + "')><i class='far fa-edit'></i> Edit </a> | <a class='btn btn-default btn-md btn-rounded' onclick=PopupForm('@Url.Action("Details", "Users")/" + data + "')><i class='fas fa-info-circle'> </i> Details </a> | <a class='btn btn-danger btn-md btn-rounded' style='margin-left:5px' onclick=Delete("+data+")><i class='fa fa-trash'></i> Delete </a>";
                    },
                        "orderable": false,
                        "searchable":false,

                    }

                ],
                "language": {

                    "emptyTable" : "No data found, Please click on <b>Add New</b> Button"
                }
            });
        });



        function PopupForm(url) {

            var formDiv = $('<div/>');
            $.get(url)
                .done(function (response) {
                    formDiv.html(response);

                    Popup = formDiv.dialog({
                        modal: true,

                        open: function () {
                            overlayOpacityNormal = $('.ui-widget-overlay').css('opacity');
                            $('.ui-widget-overlay').css('opacity', .9);
                        },

                        beforeClose: function () {
                            $('.ui-widget-overlay').css('opacity', .9);
                        },
                        autoOpen: true,
                        resizable: true,
                        title: 'Entry Form',
                        height: 500,


                        width: 900,


                        close: function () {
                            Popup.dialog('destroy').remove();
                        }

                    });
                });
        }
        function SubmitFormCreate(form) {
            $.validator.unobtrusive.parse(form);
            if ($(form).valid()) {
                $.ajax({
                    type: "POST",
                    url: form.action,
                    data: $(form).serialize(),
                    success: function (data) {
                        if (data.success) {
                            Popup.dialog('close');
                            dataTable.ajax.reload();

                            $.notify(data.message, {
                                globalPosition: "top center",
                                className: "success"
                            });


                        }
                    }
                });
            }
            return false;
        }

        function SubmitFormEdit(form) {
            $.validator.unobtrusive.parse(form);
            if ($(form).valid()) {
                $.ajax({
                    type: "POST",
                    url: form.action,
                    data: $(form).serialize(),
                    success: function (data) {
                        if (data.success) {
                            Popup.dialog('close');
                            dataTable.ajax.reload();

                            $.notify(data.message, {
                                globalPosition: "top center",
                                className: "success"
                            });


                        }
                    }
                });
            }
            return false;
        }
        function SubmitFormDetails(form) {
            $.validator.unobtrusive.parse(form);
            if ($(form).valid()) {
                $.ajax({
                    type: "POST",
                    url: form.action,
                    data: $(form).serialize(),
                    success: function (data) {
                        if (data.success) {
                            Popup.dialog('close');
                            dataTable.ajax.reload();

                            $.notify(data.message, {
                                globalPosition: "top center",
                                className: "success"
                            });


                        }
                    }
                });
            }
            return false;
        }
         function Delete(id) {
            if (confirm('Are You Sure to Delete this  Record ?'))
            {
                $.ajax({
                    type: "POST",
                    url: '@Url.Action("Delete", "Users")/' + Id,
                    success: function (data) {
                        if (data.success)
                        {
                            dataTable.ajax.reload();

                            $.notify(data.message, {
                                globalPosition: "top center",
                                className: "success"
                            })

                        }
                    }

                });
            }
        }



    </script>

}