@model OnlineSurvey.ViewModel.PageViewModel
@{
    Layout = null;
}

<div>

    <div class="card-body card-body-cascade d-flex justify-content-center mt-n2">
        @using (Html.BeginForm("Details", "Pages", FormMethod.Get, new { onsubmit = "return SubmitFormDetails(this)" }))
        {
            @Html.HiddenFor(model => model.Id)

            <!-- Table with panel -->
            <div class="card card-cascade narrower">

                <!--Card image-->
                <div class="view view-cascade gradient-card-header mdb-color darken-3 narrower py-2 mx-4 mb-3 d-flex justify-content-between align-items-center">

                    <h6 class="mt-3 mb-1"><i class="fas fa-info"></i> Details of <span class="chip ml-2 mr-2">@Model.Title</span></h6>
                </div>
                <!--/Card image-->

                <div class="px-4">

                    <div class="table-wrapper my-3 ">
                        <!--Table-->
                        <table class="table table-hover mb-3 table-bordered">

                            <!--Table head-->
                            <!--Table head-->
                            <!--Table body-->
                            <tbody>
                                <tr>
                                    <th scope="row">
                                        <a class="btn-floating btn-sm btn-info"><i class="fas fa-tag"></i></a>
                                    </th>
                                    <td class="font-weight-bold"> @Html.DisplayNameFor(model => model.Title)</td>
                                    <td class="text-primary"> @Html.DisplayFor(model => model.Title)</td>
                                </tr>
                                <tr>
                                    <th scope="row">
                                        <a class="btn-floating btn-sm btn-info"><i class="fas fa-tag"></i></a>
                                    </th>
                                    <td class="font-weight-bold"> @Html.DisplayNameFor(model => model.Slug)</td>

                                    <td class="text-primary"> @Html.DisplayFor(model => model.Slug)</td>
                                </tr>

                                <tr>
                                    <th scope="row">
                                        <a class="btn-floating btn-sm btn-info"><i class="fas fa-tag"></i></a>
                                    </th>
                                    <td class="font-weight-bold"> @Html.DisplayNameFor(model => model.AnimationUrlForPage)</td>

                                    <td class="text-primary"> @Html.DisplayFor(model => model.AnimationUrlForPage)</td>
                                </tr>
                                <tr>
                                    <th scope="row">
                                        <a class="btn-floating btn-sm btn-info"><i class="fas fa-tag"></i></a>
                                    </th>
                                    <td class="font-weight-bold"> @Html.DisplayNameFor(model => model.BannerId)</td>
                                    <td>
                                        @Html.DropDownListFor(m => m.BannerId, new SelectList(ViewBag.Banners, "Id", "MainTitle"), "-----Select banners ------", new { @class = "form-control disabled" })

                                    </td>
                                </tr>
                                <tr>
                                    <th scope="row">
                                        <a class="btn-floating btn-sm btn-info"><i class="fas fa-tag"></i></a>
                                    </th>
                                    <td class="font-weight-bold"> @Html.DisplayNameFor(model => model.SurveyId)</td>
                                    <td>
                                        @Html.DropDownListFor(m => m.SurveyId, new SelectList(ViewBag.Survey, "Id", "Name"), "-----Select survey ------", new { @class = "form-control disabled" })

                                    </td>
                                </tr>



                                <tr class="">
                                    <th scope="row">
                                        <a class="btn-floating btn-sm btn-info"><i class="fas fa-tag"></i></a>
                                    </th>
                                    <td class="font-weight-bold">  @Html.DisplayNameFor(model => model.Content)</td>
                                    <td class="collapse" id="collapseExample"> @Html.Raw(Model.Content)</td>
                                    <td>
                                        <button class="btn btn-info btn-sm" type="button" data-toggle="collapse" data-target="#collapseExample"
                                                aria-expanded="false" aria-controls="collapseExample">
                                            view content
                                        </button>
                                    </td>


                                </tr>

                            </tbody>
                            <!--Table body-->
                        </table>
                        <!--Table-->
                    </div>

                </div>

            </div>
            <!-- Table with panel -->

        }


    </div>

</div>
